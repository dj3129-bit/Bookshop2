<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="book">
	<select id="list" resultType="Book">
		SELECT * FROM book
	</select>
	
   	<insert id="add">
		INSERT INTO book
		VALUES (BOOK_SEQ.nextval, #{title}, #{publisher}, #{price}, #{pubDate})
	</insert>
	
	<update id="update">
		UPDATE book
		SET code=#{code}, title=#{title}, publisher=#{publisher}, price=#{price}, pub_date=#{pubDate}
		WHERE code=#{code}
	</update>
	
	<delete id="delete">
		DELETE FROM book
		WHERE code=#{code}
	</delete>
	
	<select id="item" resultType="Book">
		SELECT * FROM book
		WHERE code=#{code}
	</select>
</mapper>


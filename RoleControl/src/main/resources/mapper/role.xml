<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="role">
	<select id="list_member" resultType="Role">
		SELECT * FROM role r
		LEFT JOIN member_role mr
		ON r.role=mr.role AND mr.role=#{role}
	</select>
	
	<insert id="add_member">
		INSERT INTO member_role
		VALUES (#{role}, #{role})
	</insert>
	
	<delete id="delete_member">
		DELETE FROM member_role
		WHERE id=#{id} AND role=#{role}
	</delete>

	<select id="list" resultType="Role">
		SELECT * FROM role
	</select>
	
   	<insert id="add">
		INSERT INTO role 
		VALUES (#{role}, #{label}, #{descript})
	</insert>
	
	<update id="update">
		UPDATE role
		SET label=#{label}, descript=#{descript}
		WHERE role=#{role}
	</update>
	
	<delete id="delete">
		DELETE FROM role
		WHERE role=#{role}
	</delete>
	
	<select id="item" resultType="Role">
		SELECT * FROM role
		WHERE role=#{role}
	</select>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="authority">
	<select id="list_role" resultType="Authority">
		SELECT * FROM authority a
		LEFT JOIN role_authority ra
		ON a.authority=ra.authority AND ra.role=#{role}
	</select>
	
	<insert id="add_role">
		INSERT INTO role_authority 
		VALUES (#{role}, #{authority})
	</insert>
	
	<delete id="delete_role">
		DELETE FROM role_authority
		WHERE role=#{role} AND authority=#{authority}
	</delete>

	<select id="list" resultType="Authority">
		SELECT * FROM authority
	</select>
	
   	<insert id="add">
		INSERT INTO authority 
		VALUES (#{authority}, #{label}, #{descript})
	</insert>
	
	<update id="update">
		UPDATE authority
		SET label=#{label}, descript=#{descript}
		WHERE authority=#{authority}
	</update>
	
	<delete id="delete">
		DELETE FROM authority
		WHERE authority=#{authority}
	</delete>
	
	<select id="item" resultType="Authority">
		SELECT * FROM authority
		WHERE authority=#{authority}
	</select>

</mapper>
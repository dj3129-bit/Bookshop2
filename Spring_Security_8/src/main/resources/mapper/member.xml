<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">
	<select id="list" resultType="member">
		SELECT * FROM member
	</select>
	
   	<insert id="add">
		INSERT INTO member 
		VALUES (#{id}, #{password}, #{name}, #{tel})
	</insert>
	
	<update id="update">
		UPDATE member
		SET password=#{password}, name=#{name}, tel=#{tel}
		WHERE id=#{id}
	</update>
	
	<delete id="delete">
		DELETE FROM member
		WHERE id=#{id}
	</delete>
	
	<resultMap type="Member" id="MemberMap" autoMapping="true">
		<id column="id" property="id"/>
		
		<collection property="authority" column="mid" javaType="ArrayList" ofType="Authority" autoMapping="true">
			<id column="authority" property="authority" />
		</collection>
	</resultMap>
	
	<select id="item" resultMap="MemberMap">
		SELECT m.*, ma.id, a.* 
		FROM member m
		LEFT JOIN member_authority ma ON m.id=ma.id
		LEFT JOIN authority a ON ma.authority=a.authority 
		WHERE m.id=#{id}
	</select>
</mapper>